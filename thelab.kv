<WidgetsExample>:
    cols:3

    ToggleButton:
        text: "OFF"
        size_hint: None, 1
        width: "100dp"
        on_state: root.on_toggle_state(self)

    Button:
        text: "Count"
        on_press: root.on_btn_click()
        disabled: not root.count_enabled

    Label:
        text: root.my_text
        font_name: "RESOURCES/fonts/Lcd.ttf"
        font_size: "100dp"
        color: .1, 1, 2

    Switch:
        id: my_switch
        active: True
        size_hint: None, 1
        width: "100dp"
        on_active: root.on_switch_active(self)

    Slider:
        id: my_slider
        min: 0
        max: 100
        orientation : "vertical"
        value: 20
        # on_value: root.on_slider_value(self)
        disabled: not my_switch.active

    BoxLayout:
        orientation: "vertical"
        Label:
            # text: root.slider_value_txt
            font_size: "40dp"
            text: str(int(my_slider.value))

        ProgressBar:
            max:100
            value: my_slider.value

    TextInput:
        id: my_text_input
        size_hint: None, 1
        width: "100dp"
        text: "foo"
        multiline: False
        on_text_validate: root.on_text_validate(self)

    Label:
        text: "Your Name is: " + root.text_input_str


